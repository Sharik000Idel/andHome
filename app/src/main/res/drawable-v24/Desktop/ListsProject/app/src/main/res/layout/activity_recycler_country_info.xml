<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddItemRecyclerViewActivity"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название страны"
            />

        <EditText
            android:id="@+id/edt_recycler_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Столица"

            />

        <EditText
            android:id="@+id/edt_recycler_item_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Население"

            />

        <EditText
            android:id="@+id/edt_recycler_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"

            />

        <EditText
            android:id="@+id/edt_recycler_item_description"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:inputType="textMultiLine"
            android:gravity="top"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Флаг"

            />

        <ImageView
            android:id="@+id/iv_item_flag"
            android:layout_width="250dp"
            android:layout_height="167dp"

            />

        <Button
            android:id="@+id/btn_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить фотографию"
            android:onClick="onClickItemAddPhoto"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменить страну"
            android:onClick="onClickItemChange"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить страну"
            android:onClick="onClickDeleteCountry"
            />

    </LinearLayout>
</ScrollView>
